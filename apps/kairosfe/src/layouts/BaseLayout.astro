---
import '@/styles/tailwind.css';
import ToastProvider from '@/components/ui/ToastProvider';
import ThemeSync from '@/components/ui/ThemeSync';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Kairos', description = 'HR Management System' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />

    <!-- CRITICAL: Initialize theme and locale BEFORE first render to prevent flash -->
    <script is:inline>
      (function() {
        try {
          const stored = localStorage.getItem('kairos-ui');
          if (stored) {
            const { state } = JSON.parse(stored);
            const theme = state?.theme || 'auto';
            const locale = state?.locale || 'en';

            // Set locale on HTML element
            document.documentElement.lang = locale;

            // Set theme class on HTML element
            if (theme === 'dark') {
              document.documentElement.classList.add('dark');
            } else if (theme === 'light') {
              document.documentElement.classList.remove('dark');
            } else if (theme === 'auto') {
              // Auto mode: detect system preference
              const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
              if (isDark) {
                document.documentElement.classList.add('dark');
              }
            }
          }
        } catch (e) {
          console.error('Failed to initialize theme:', e);
        }
      })();
    </script>

    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-background-dark text-text-light dark:text-text-dark">
    <ThemeSync client:load />
    <slot />
    <ToastProvider client:only="react" />
    <script>
      // Initialize PostHog and Sentry
      import('@/lib/analytics/posthog').then(({ initPostHog }) => {
        initPostHog();
      });

      import('@/lib/analytics/sentry').then(({ initSentry }) => {
        initSentry();
      });
    </script>
  </body>
</html>
