---
import SidebarNav from './SidebarNav';
---

<aside class="sidebar">
  <SidebarNav client:load />
</aside>

<style lang="scss">
  @use '@kairos/design-tokens' as *;

  .sidebar {
    width: 250px;
    @include bg-surface;
    border-right: 1px solid var(--color-border);
    @include padding(3);

    :global(.sidebar__nav) {
      @include flex-column;
      @include gap(1);
    }

    :global(.sidebar__link) {
      padding: 12px 16px;
      @include radius('md');
      @include theme-color('color', 'onSurface');
      transition: all var(--duration-fast) var(--easing-standard);
      display: flex;
      align-items: center;
      @include gap(2);

      &:hover {
        @include theme-color('background-color', 'surfaceRaised');
        text-decoration: none;
      }

      &.active {
        @include theme-color('background-color', 'primary');
        @include theme-color('color', 'onPrimary');
      }
    }

    :global(.sidebar__icon) {
      font-size: 20px;
    }

    :global(.sidebar__label) {
      font-weight: var(--font-weight-medium);
    }
  }
</style>
