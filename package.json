{
  "name": "kairos",
  "version": "1.0.0",
  "private": true,
  "description": "Kairos HR Management System - Frontend",
  "scripts": {
    "postinstall": "husky install",
    "build": "pnpm -r --filter ./apps/kairosfe build",
    "dev": "pnpm -w --filter ./apps/kairosfe dev",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm -r --filter ./apps/kairosfe run test:e2e"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx,astro,js,jsx,css,scss,md,json}": [
      "prettier --write"
    ],
    "*.{ts,tsx,astro,js,jsx}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
